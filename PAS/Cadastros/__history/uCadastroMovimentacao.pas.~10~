unit uCadastroMovimentacao;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Mask, Vcl.Buttons,
  Vcl.ExtCtrls, uConn, uClasseMovimentacao, uClasseConta;

type
  TfrmCadMovimetacao2 = class(TForm)
    edtValor: TEdit;
    mmDescri: TMemo;
    btnConfirmar: TBitBtn;
    btnCancelar: TBitBtn;
    edtData: TMaskEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    cmbConta: TComboBox;
    rgTipoConta: TRadioGroup;
    Label4: TLabel;
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure btnCancelarClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmCadMovimetacao2: TfrmCadMovimetacao2;
  Conn : TConn;
  Mov : TMovimento;
  Conta : TConta;

implementation

{$R *.dfm}

procedure TfrmCadMovimetacao2.btnCancelarClick(Sender: TObject);
begin
  Close;
end;

procedure TfrmCadMovimetacao2.FormCreate(Sender: TObject);
begin
  Conn := TConn.Create;
  Mov := TMovimento.Create(Conn);
  Conta := TConta.Create(Conn);
end;

procedure TfrmCadMovimetacao2.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
  if Key = VK_ESCAPE then
    Close;
end;

procedure TfrmCadMovimetacao2.FormShow(Sender: TObject);
begin
  edtData.Text := DateToStr( Date );
end;

end.
